# Checking data types and casting / Printing out types
print(type('Liyema'))      #str
print(type(first_name))    #str
print(type(last_name))     #str
print(type(age))           #int
print(type(year))          #int
print(type(is_married))    #boolean
print(type(False))         #boolean

