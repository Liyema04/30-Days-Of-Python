# Exercise Level 2
print(len(first_name))  

def compare_length(full_name):
    if len(first_name) >= len(last_name) 
        return True
    return False 
print(compare_length)
print(type(compare_length)

# Declaring Numbers
num_one = 5
num_two = 4

# Addition 
total = num_one + num_two
print(total)
print(type(total))

# Substraction 
diff = num_one - num_two
print(diff)
print(type(diff))

# Multiply 
product = num_two * num_one
print(product)
print(type(product))

# Divide
division = num_one / num_two
print(division)
print(type(division))

# Modulus division 
modulo = num_two % num_one
print("Modulus division: ",modulo)
print(type(modulo))

# Exponents 
exp = num_one**num_two
print("Exponential form: ", exp)
print(type(exp))

# Floor-Division
floor_division = num_one // num_two
print("Floor division: ", floor_division)
print(type(floor_division))

# Geometry Calc : Area & Circumference of CIRCLE(radius = 30m)
pi = 3.142 #float
area_of_circle = pi * 30**2
print("Area of circle: ", area_of_circle)
print(type(area_of_circle))

circum_of_circle = 2 * pi * 30 
print("Circumference of circle: ", circum_of_circle)
print(type(circum_of_circle))

# user RADIUS input FOR area OF circle
# main function for calulating area 
def area(r):
    pi=3.142;
    return pi*r*r

# Driver code 
user_radius = int(input())
circle_area = area(user_radius)
Print("Area of circle with radius ", user_radius, "is", ciricle_area)
